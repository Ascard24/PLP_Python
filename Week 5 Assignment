Assignment 1
class Book:
    def __init__(self, title, author, pages):
        self.title = title
        self.author = author
        self.pages = pages

    def read(self):
        return f"Reading '{self.title}' by {self.author}"

class Ebook(Book):  # Inheritance
    def __init__(self, title, author, pages, file_size):
        super().__init__(title, author, pages)
        self.file_size = file_size

    def download(self):
        return f"Downloading '{self.title}' ({self.file_size}MB)"


# Polymorphism
class Animal:
    def move(self):
        pass

class Dog(Animal):
    def move(self):
        return "Running"

class Bird(Animal):
    def move(self):
        return "Flying"

# Test
b1 = Ebook("1984", "George Orwell", 328, 5)
print(b1.read())
print(b1.download())

animals = [Dog(), Bird()]
for a in animals:
    print(a.move())

